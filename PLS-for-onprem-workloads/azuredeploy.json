{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "Environment": {
            "type": "string",
            "allowedValues": [
                "Provider",
                "Cx-A",
                "Cx-B"
            ],
            "metadata": {
                "description": "The shared key used to establish connection between the two vNet Gateways."
            }
        },
        "sharedKey": {
            "type": "securestring",
             "defaultValue": "@password@",
            "metadata": {
                "description": "The shared key used to establish connection between the two vNet Gateways."
            }
        },
        "gatewaySku": {
            "type": "string",
            "defaultValue": "VpnGw1",
            "allowedValues": [
                "VpnGw1",
                "VpnGw2",
                "VpnGw3",
                "VpnGw4",
                "VpnGw5"
            ],
            "metadata": {
                "description": "The SKU for the VPN Gateway. Cannot be Basic SKU."
            }
        },
        "vpnGatewayGeneration": {
            "type": "string",
            "defaultValue": "Generation1",
            "allowedValues": [
                "Generation1",
                "Generation2"
            ],
            "metadata": {
                "description": "Select VPn Gateway Generation."
            }
        },
      "UDRlockDownbyPublicIP": {
          "type": "string",
          "allowedValues": [
              "yes",
              "no"
          ]
      },
      "MyPublicIP": {
          "type": "string",
          "defaultValue": "null",
          "metadata": {
            "description": "Optional in case you answer no for Lock Down Public IP, but required in case you selected yes. Please use curl ifconfig.io to get your Public IP address"
            }
      }, 
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location of the resources"
            },
            "defaultValue": "[resourceGroup().location]"
        }
    },
    "variables": {
    "artifactsLocation": "https://raw.githubusercontent.com/dmauser/Lab/master/PLS-for-onprem-workloads/linked/",
    "providerTemplateURI": "[concat(uri(variables('artifactsLocation'),'provider.json'))]",
    "customer_aTemplateURI": "[concat(uri(variables('artifactsLocation'),'customer-a.json'))]",
    "customer_bTemplateURI": "[concat(uri(variables('artifactsLocation'),'customer-b.json'))]"    
    },
    "resources": [
        {
            "condition": "[equals(parameters('Environment'), 'Provider')]",
            "name": "deploy-provider",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('providerTemplateURI')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "Environment": {
                        "value": "[parameters('Environment')]"
                    },
                    "sharedKey": {
                        "value": "[parameters('sharedKey')]"
                    },
                    "gatewaySku": {
                        "value": "[parameters('gatewaySku')]"
                    },
                    "vpnGatewayGeneration": {
                        "value": "[parameters('vpnGatewayGeneration')]"
                    },
                    "UDRlockDownbyPublicIP": {
                        "value": "[parameters('UDRlockDownbyPublicIP')]"
                    },
                    "MyPublicIP": {
                        "value": "[parameters('MyPublicIP')]"
                    },                                        
                    "location": {
                        "value": "[parameters('location')]"
                    }                  
                }

            }
        }
    ]
}